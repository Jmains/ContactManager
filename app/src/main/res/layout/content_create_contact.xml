<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreateContact"
    tools:showIn="@layout/activity_create_contact">

    <TextView
        android:id="@+id/id_add_dofc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@android:color/black"
        android:drawableStart="@android:drawable/ic_input_add"
        android:onClick="showDatePickerDialog"
        app:layout_constraintEnd_toEndOf="@+id/id_phone_num_tedit"
        app:layout_constraintHorizontal_bias="0.382"
        app:layout_constraintStart_toEndOf="@+id/id_dob_tv"
        app:layout_constraintTop_toBottomOf="@+id/id_phone_num_tedit" />

    <EditText
        android:id="@+id/id_first_name_tedit"
        android:layout_width="380dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/ex_man_string"
        android:inputType="textPersonName"
        android:maxLength="25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_last_name_tedit"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/ex_iron_string"
        android:inputType="textPersonName"
        android:maxLength="25"
        app:layout_constraintEnd_toEndOf="@+id/id_first_name_tedit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/id_first_name_tedit"
        app:layout_constraintTop_toBottomOf="@+id/id_first_name_tedit" />

    <EditText
        android:id="@+id/id_phone_num_tedit"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/ex_5126335449_string"
        android:inputType="phone"
        android:maxLength="10"
        app:layout_constraintEnd_toEndOf="@+id/id_first_name_tedit"
        app:layout_constraintStart_toStartOf="@+id/id_first_name_tedit"
        app:layout_constraintTop_toBottomOf="@+id/id_last_name_tedit" />


    <TextView
        android:id="@+id/id_first_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#8A89DD36"
        android:backgroundTint="#FFFFFF"
        android:text="@string/first_name_string"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/id_first_name_tedit"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_last_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/last_name_string"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/id_last_name_tedit"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_phone_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/phone_string"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/id_phone_num_tedit"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_dob_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"

        android:text="@string/date_of_birth_string"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/id_show_dob_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_dofc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/date_of_first_contact_string"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/id_show_dofc_tv"
        app:layout_constraintStart_toStartOf="@+id/id_dob_tv" />

    <TextView
        android:id="@+id/id_show_dob_tv"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/id_first_name_tedit"
        app:layout_constraintStart_toStartOf="@+id/id_first_name_tedit"
        app:layout_constraintTop_toBottomOf="@+id/id_add_dob_tv" />

    <TextView
        android:id="@+id/id_add_dob_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"
        android:drawableStart="@android:drawable/ic_input_add"
        android:onClick="showDatePickerDialog"
        app:layout_constraintEnd_toEndOf="@+id/id_phone_num_tedit"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toEndOf="@+id/id_dob_tv"
        app:layout_constraintTop_toBottomOf="@+id/id_phone_num_tedit" />

    <TextView
        android:id="@+id/id_show_dofc_tv"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/id_first_name_tedit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/id_first_name_tedit"
        app:layout_constraintTop_toBottomOf="@+id/id_add_dofc_tv" />

    <Button
        android:id="@+id/id_save_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="113dp"
        android:layout_height="54dp"
        android:backgroundTint="#5CB009"
        android:onClick="onEdit"
        android:text="@string/save_string"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_show_dofc_tv" />

    <Button
        android:id="@+id/id_delete_button"
        android:layout_width="108dp"
        android:layout_height="57dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="76dp"
        android:backgroundTint="#F30707"
        android:onClick="onDelete"
        android:text="@string/delete_string"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_save_button"
        app:layout_constraintTop_toBottomOf="@+id/id_show_dofc_tv" />

    <Button
        android:id="@+id/id_cancel_button"
        android:layout_width="109dp"
        android:layout_height="56dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#ED000B"
        android:text="@android:string/cancel"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:onClick="onCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_show_dofc_tv"
        app:layout_constraintVertical_bias="0.615" />

    <Button
        android:id="@+id/id_add_button"
        android:layout_width="114dp"
        android:layout_height="54dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#4DA50B"
        android:onClick="onAdd"
        android:text="@string/add_string"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_cancel_button"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_show_dofc_tv"
        app:layout_constraintVertical_bias="0.621" />

</androidx.constraintlayout.widget.ConstraintLayout>